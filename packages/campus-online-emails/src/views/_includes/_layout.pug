mjml
	mj-head
		mj-attributes
			mj-link(href='/css/main.css')
			mj-text(padding='0')
			mj-all(max-width='600')
			mj-text(color='#141618')
			mj-all(font-family="'SF Pro Text','SF Pro Icons','Helvetica Neue','Helvetica','Arial',sans-serif,-apple-system,BlinkMacSystemFont,Roboto,Helvetica,Arial,sans-serif,'Apple Color Emoji','Segoe UI Emoji','Segoe UI Symbol'")
